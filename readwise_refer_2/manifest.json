{
  "manifest_version": 3,
  "name": "Referer Blocker",
  "version": "1.0",
  "description": "阻止特定域名的 Referer 发送",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "host_permissions": [
    "*://*.mmbiz.qpic.cn/*",
    "https://mmbiz.qpic.cn/*",
    "*://*.readwise.io/*",
    "https://read.readwise.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}